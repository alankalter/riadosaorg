<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@RenderSection("Styles", false)
</head>
<body style="background-image:url(@ViewBag.BgUrl)">


	<nav class="navbar navbar-expand-lg navbar-light bg-light" style="transform:rotate(@(ViewBag.NavRotate)deg); border-width:@ViewBag.BorderWidth; border-color:@ViewBag.BorderColor">
		<a class="navbar-brand" href="/">Riadosa</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" style="transform:rotate(@(ViewBag.Link1Rotate)deg)" href="/music">Music<span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" style="transform:rotate(@(ViewBag.Link2Rotate)deg)" href="/shows">Shows</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" style="transform:rotate(@(ViewBag.Link3Rotate)deg)" href="/misc/about">About</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" style="transform:rotate(@(ViewBag.Link4Rotate)deg)" href="/weatherchime">WeatherChime</a>
				</li>
			</ul>
		</div>
	</nav>
	<div class="container body-content">


		<div class="row mainsection" style="transform:rotate(@(ViewBag.BodyRotate)deg); border-width:@ViewBag.BorderWidth2; border-color:@ViewBag.BorderColor">


			<div class="col-md-9">
				@RenderBody()
			</div>



		</div>
		<footer style="transform:rotate(@(ViewBag.FooterRotate)deg); border-width:@ViewBag.BorderWidth3; border-color:@ViewBag.BorderColor">
			<p>&copy; @DateTime.Now.Year - Riadosa.org</p>
		</footer>
	</div>


	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
	<script type="text/javascript">
		
	</script>
</body>
</html>
